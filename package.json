{
  "name": "backpack",
  "private": true,
  "workspaces": [
    "backend/workers/*",
    "examples/clients/*",
    "examples/xnfts",
    "examples/xnfts/*",
    "packages/*"
  ],
  "scripts": {
    "lint:fix": "prettier {examples,packages}/**/*.{ts,tsx,css,md,json} --write",
    "prepare": "husky install",
    "start": "env-cmd --silent turbo run start --concurrency=20",
    "start:fresh": "yarn install && yarn clean && yarn install && yarn start",
    "test": "env-cmd --silent turbo run test -- --passWithNoTests --watchAll=false",
    "build": "env-cmd --silent turbo run build",
    "e2e": "env-cmd --silent turbo run e2e",
    "clean": "npx rimraf {backend,examples,packages}/**/{.parcel-cache,.turbo,build,dev,dist,node_modules,yarn-error.log} && yarn clean:root",
    "clean:root": "npx rimraf {.parcel-cache,.turbo,node_modules,yarn-error.log}",
    "preinstall": "node -e \"if (! require('fs').existsSync('./wallet-adapter/packages/wallets/backpack/lib')){process.exit(1)}\" || yarn install-wallet-adapter",
    "install-wallet-adapter": "cd wallet-adapter && yarn && yarn build && npx lerna exec -- yarn unlink || true && npx lerna exec -- yarn link && cd .."
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.9"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": "prettier --write"
  },
  "resolutions": {
    "@solana/web3.js": "1.43.2",
    "@types/react-dom": "^17.0.0",
    "@types/react": "^17.0.0",
    "parcel": "2.6.2",
    "prettier": "2.7.1",
    "react-dom": "^17.0.0",
    "react": "^17.0.0"
  }
}
