{
  "extends": "expo/tsconfig.base",
  "include": ["src"],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "../../node_modules/@coral-xyz/app-extension"
  ],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~navigation/*": ["src/navigation/*"],
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~screens/*": ["src/screens/*"]
    }
  }
}
