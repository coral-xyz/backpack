{
  "extends": "expo/tsconfig.base",
  "include": ["src", "app.config.ts", "metro.config.js"],
  "exclude": ["**/node_modules", "**/.*/"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~navigation/*": ["src/navigation/*"],
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~screens/*": ["src/screens/*"]
    }
  }
}
