{
  "extends": "expo/tsconfig.base",
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~navigation/*": ["src/navigation/*"],
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~screens/*": ["src/screens/*"],

      "@coral-xyz/background": ["../background"],
      "@coral-xyz/common": ["../common"],
      "@coral-xyz/recoil": ["../recoil"],
      "@coral-xyz/themes": ["../themes"]
    }
  },
  "references": [
    { "path": "../background" },
    { "path": "../common" },
    { "path": "../recoil" },
    { "path": "../themes" }
  ]
}
