{
  "name": "Anchor",
  "version": "0.1.0",
  "description": "Anchor Wallet",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Anchor"
  },
  "web_accessible_resources": [
    "../../provider-injection/dist/browser/index.js",
    "../public/solana.png"
  ],
  "background": {
    "persistent": true,
    "scripts": ["background/index.ts"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript/index.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "../public/anchor.png",
    "192": "../public/anchor.png",
    "512": "../public/anchor.png"
  },
  "permissions": ["storage"],
  "options_ui": {
    "page": "options.html"
  }
}
