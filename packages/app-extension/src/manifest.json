{
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["contentScript.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "anchor.png",
    "192": "anchor.png",
    "512": "anchor.png"
  },
  "permissions": ["storage"]
}
